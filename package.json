{
  "name": "@moducate/houston",
  "version": "0.2.1",
  "description": "RFC 7807 compliant errors for Node.js",
  "keywords": [
    "problem-details",
    "rfc-7807"
  ],
  "homepage": "https://github.com/moducate/houston#readme",
  "bugs": "https://github.com/moducate/houston/issues",
  "repository": "moducate/houston",
  "license": "MIT",
  "author": "Luke Carr <luke@moducate.app>",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "siroc build",
    "changelog": "gitmoji-changelog",
    "lint": "yarn lint:eslint",
    "lint:eslint": "eslint --ext .ts --fix .",
    "prepack": "yarn build",
    "prepare": "husky install",
    "test": "jest"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@nuxtjs/eslint-config-typescript": "^7.0.2",
    "@size-limit/preset-small-lib": "^7.0.0",
    "@types/jest": "^27.0.2",
    "commitlint-config-gitmoji": "^2.2.5",
    "eslint": "^8.2.0",
    "gitmoji-changelog": "^2.2.1",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lint-staged": "^12.0.2",
    "siroc": "^0.16.0",
    "size-limit": "^7.0.0",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4"
  },
  "size-limit": [
    {
      "name": "withError",
      "import": "{ withError }",
      "limit": "500 B"
    }
  ]
}
